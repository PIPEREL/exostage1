{% extends 'base.html.twig' %} {% block title %}Gerer les catégories!{% endblock %} {% block body %}

<div class="example-wrapper">
    <h1>Gérer les catégories</h1>
    <a href="{{path('admin_categories_ajout')}}" class="btn btn-primary">ajouter une catégorie</a>
    <table class="table table-dark table-hover table-striped">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Nom</th>
                <th scope="col">Parent</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for categorie in categories %}
            <tr>
                <th scope="row">{{categorie.id}}</th>
                <td>{{categorie.name}}</td>
                <td> {{categorie.parent}}</td>
                <td class="text-center"> <a href="{{path('admin_categories_modifier', {'id': categorie.id})}}" class="btn btn-primary w-50">modifier une catégorie</a></td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}