{% extends 'users.html.twig' %} {% block title %}modification du mot de passe{% endblock %} {% block body %} {% for flashError in app.flashes('verify_password_error') %}
<div class="d-flex justify-content-center">
    <div class="alert alert-danger w-75" role="alert">{{ flashError }}</div>
</div>
{% endfor %}

<h1>Modification du mot de passe de {{app.user.name}} {{app.user.firstname}}</h1>
<form method="POST">
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input type="password" name="password" class="form-control" id="password">
    </div>
    <div class="mb-3">
        <label for="password2" class="form-label">Password2</label>
        <input type="password" name="password2" class="form-control" id="password2">
    </div>

    <button type="submit" class="btn btn-primary">Modifier</button>
</form>


{% endblock %}